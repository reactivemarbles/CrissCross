<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CrissCross.WPF.UI.Controls"
    xmlns:conv="clr-namespace:CrissCross.WPF.UI.Converters">

    <!--  Ensure BooleanToVisibilityConverter available as a resource  -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style x:Key="DefaultUiColorPickerStyle" TargetType="{x:Type controls:ColorPicker}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ColorPicker}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource ControlCornerRadius}">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Preview  -->
                            <Border
                                Grid.ColumnSpan="3"
                                Height="32"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding SelectedColor, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Border.Background>
                            </Border>

                            <!--  Hex  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="Hex:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                MinWidth="120"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center">
                                <TextBox.Text>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="SelectedColor"
                                        RelativeSource="{RelativeSource TemplatedParent}"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.Converter>
                                            <conv:ColorToHexConverter ShowAlpha="{Binding ShowAlpha, RelativeSource={RelativeSource TemplatedParent}}" />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>

                            <!--  A  -->
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="A:">
                                <TextBlock.Visibility>
                                    <Binding
                                        Converter="{StaticResource BooleanToVisibilityConverter}"
                                        Path="ShowAlpha"
                                        RelativeSource="{RelativeSource TemplatedParent}" />
                                </TextBlock.Visibility>
                            </TextBlock>
                            <Slider
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,8,8,0"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                TickFrequency="1"
                                Visibility="{Binding ShowAlpha, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Value="{Binding A, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                MinWidth="32"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                Text="{Binding A, RelativeSource={RelativeSource TemplatedParent}, StringFormat=F0}"
                                Visibility="{Binding ShowAlpha, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <!--  R  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="R:" />
                            <Slider
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,8,8,0"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                TickFrequency="1"
                                Value="{Binding R, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="2"
                                MinWidth="32"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                Text="{Binding R, RelativeSource={RelativeSource TemplatedParent}, StringFormat=F0}" />

                            <!--  G  -->
                            <TextBlock
                                Grid.Row="4"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="G:" />
                            <Slider
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,8,8,0"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                TickFrequency="1"
                                Value="{Binding G, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="2"
                                MinWidth="32"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                Text="{Binding G, RelativeSource={RelativeSource TemplatedParent}, StringFormat=F0}" />

                            <!--  B  -->
                            <TextBlock
                                Grid.Row="5"
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="B:" />
                            <Slider
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="0,8,8,0"
                                IsSnapToTickEnabled="True"
                                Maximum="255"
                                Minimum="0"
                                TickFrequency="1"
                                Value="{Binding B, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="2"
                                MinWidth="32"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                Text="{Binding B, RelativeSource={RelativeSource TemplatedParent}, StringFormat=F0}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultUiColorPickerStyle}" TargetType="{x:Type controls:ColorPicker}" />
</ResourceDictionary>

