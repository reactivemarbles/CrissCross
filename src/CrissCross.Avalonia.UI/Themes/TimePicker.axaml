<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CrissCross.Avalonia.UI.Controls;assembly=CrissCross.Avalonia.UI">
    
    <!-- CrissCross TimePicker Style -->
    <!-- Inherits from Avalonia TimePicker, apply minimal styling -->
    <Style Selector="controls|TimePicker">
        <Setter Property="Background" Value="#3D3D3D" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="BorderBrush" Value="#5D5D5D" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MinWidth" Value="150" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:TimePicker">
                <Border Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="12,6">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Time Display -->
                        <Grid Grid.Column="0" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto">
                            <TextBlock Name="PART_HourTextBlock"
                                       Grid.Column="0"
                                       Text="{Binding SelectedTime.Hours, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0:D2}', FallbackValue='--'}"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text=":"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center"
                                       Margin="2,0" />
                            <TextBlock Name="PART_MinuteTextBlock"
                                       Grid.Column="2"
                                       Text="{Binding SelectedTime.Minutes, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0:D2}', FallbackValue='--'}"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center" />
                        </Grid>
                        
                        <!-- Clock Icon -->
                        <Button Name="PART_FlyoutButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="4"
                                VerticalAlignment="Center">
                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.9L16.2,16.2Z"
                                  Fill="{TemplateBinding Foreground}"
                                  Width="16"
                                  Height="16"
                                  Stretch="Uniform" />
                        </Button>
                        
                        <!-- Popup -->
                        <Popup Name="PART_Popup"
                               PlacementTarget="{TemplateBinding}"
                               Placement="Bottom"
                               IsLightDismissEnabled="True">
                            <Border Background="#2D2D2D"
                                    BorderBrush="#5D5D5D"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Select Time" FontWeight="Bold" />
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <NumericUpDown Name="HourPicker" Minimum="0" Maximum="23" Width="60" />
                                        <TextBlock Text=":" VerticalAlignment="Center" />
                                        <NumericUpDown Name="MinutePicker" Minimum="0" Maximum="59" Width="60" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- PointerOver State -->
    <Style Selector="controls|TimePicker:pointerover /template/ Border#Border">
        <Setter Property="BorderBrush" Value="#7D7D7D" />
    </Style>
    
    <!-- Pressed State -->
    <Style Selector="controls|TimePicker:pressed /template/ Border#Border">
        <Setter Property="BorderBrush" Value="#0078D4" />
    </Style>
    
    <!-- Disabled State -->
    <Style Selector="controls|TimePicker:disabled">
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    
</Styles>
