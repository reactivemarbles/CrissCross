<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:CrissCross.Avalonia.UI.Controls"
             xmlns:vm="using:CrissCross.Avalonia.UI.Gallery.ViewModels"
             x:Class="CrissCross.Avalonia.UI.Gallery.Views.Pages.DatePickerPageView"
             x:DataType="vm:DatePickerPageViewModel">

    <ScrollViewer>
        <controls:StackPanel Margin="24" Spacing="16">
            <controls:TextBlock Text="Date &amp; Time Pickers"
                                FontSize="32"
                                FontWeight="Bold" />

            <controls:TextBlock Text="Date and Time picker controls allow users to select dates and times from a calendar or clock interface."
                                TextWrapping="Wrap"
                                Opacity="0.7" />

            <!-- DatePicker -->
            <controls:Card Margin="0,16,0,0">
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="DatePicker" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Select a date from a calendar dropdown." Opacity="0.7" />
                    <controls:StackPanel Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock Text="CrissCross DatePicker:" FontSize="12" Margin="0,0,0,4" />
                            <controls:DatePicker />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- TimePicker -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="TimePicker" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Select a time value." Opacity="0.7" />
                    <controls:StackPanel Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock Text="CrissCross TimePicker:" FontSize="12" Margin="0,0,0,4" />
                            <controls:TimePicker />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- DateTimePicker -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="DateTimePicker" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Combined date and time selection." Opacity="0.7" />
                    <controls:StackPanel Spacing="8" HorizontalAlignment="Left">
                        <controls:DateTimePicker />
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- Calendar -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="Calendar" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Full calendar view for date selection." Opacity="0.7" />
                    <controls:StackPanel Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock Text="CrissCross Calendar:" FontSize="12" Margin="0,0,0,4" />
                            <controls:Calendar HorizontalAlignment="Left" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- CalendarDatePicker -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="CalendarDatePicker" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Compact date picker with calendar flyout." Opacity="0.7" />
                    <controls:StackPanel Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock Text="CrissCross CalendarDatePicker:" FontSize="12" Margin="0,0,0,4" />
                            <controls:CalendarDatePicker Content="Select a date..." />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>
        </controls:StackPanel>
    </ScrollViewer>
</UserControl>
