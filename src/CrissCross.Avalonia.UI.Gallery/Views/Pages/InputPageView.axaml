<UserControl
    x:Class="CrissCross.Avalonia.UI.Gallery.Views.Pages.InputPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CrissCross.Avalonia.UI.Controls"
    xmlns:vm="using:CrissCross.Avalonia.UI.Gallery.ViewModels"
    x:DataType="vm:InputPageViewModel">

    <ScrollViewer>
        <controls:StackPanel Margin="24" Spacing="16">
            <controls:TextBlock
                FontSize="32"
                FontWeight="Bold"
                Text="Input Controls" />

            <controls:TextBlock
                Opacity="0.7"
                Text="Input controls allow users to enter and edit data. CrissCross provides enhanced input controls with validation, formatting, and rich styling."
                TextWrapping="Wrap" />

            <!--  TextBox  -->
            <controls:Card Margin="0,16,0,0">
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="TextBox" />
                    <controls:TextBlock Opacity="0.7" Text="Text boxes allow users to enter text." />
                    <controls:StackPanel
                        MaxWidth="400"
                        HorizontalAlignment="Left"
                        Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Standard TextBox:" />
                            <controls:TextBox Watermark="Enter text here..." />
                        </controls:StackPanel>
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Disabled TextBox:" />
                            <controls:TextBox IsEnabled="False" Watermark="Disabled" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  AutoSuggestBox  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="AutoSuggestBox" />
                    <controls:TextBlock Opacity="0.7" Text="AutoSuggestBox provides suggestions as users type. Start typing a fruit name to see suggestions." />
                    <controls:StackPanel
                        MaxWidth="400"
                        HorizontalAlignment="Left"
                        Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Search for fruits:" />
                            <controls:AutoSuggestBox
                                FilterMode="Contains"
                                ItemsSource="{Binding SampleSuggestions}"
                                MinimumPrefixLength="1"
                                PlaceholderText="Type to search fruits..." />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  RichTextBox  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="RichTextBox" />
                    <controls:TextBlock Opacity="0.7" Text="Rich text boxes provide multi-line text editing with visual formatting:" />
                    <controls:TextBlock
                        Margin="16,0,0,0"
                        FontSize="12"
                        Opacity="0.6">
                        <Run Text="• Select text and press " /><Run FontWeight="Bold" Text="Ctrl+B" /><Run Text=" for " /><Run FontWeight="Bold" Text="Bold" />
                        <LineBreak />
                        <Run Text="• Select text and press " /><Run FontWeight="Bold" Text="Ctrl+I" /><Run Text=" for " /><Run FontStyle="Italic" Text="Italic" />
                        <LineBreak />
                        <Run Text="• Select text and press " /><Run FontWeight="Bold" Text="Ctrl+U" /><Run Text=" for " /><Run Text="Underline" TextDecorations="Underline" />
                    </controls:TextBlock>

                    <controls:StackPanel HorizontalAlignment="Left" Spacing="16">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="RichTextBox with Visual Formatting:" />
                            <controls:RichTextBox
                                Name="FormattingRichTextBox"
                                AcceptsReturn="True"
                                AcceptsTab="True"
                                IsFormattingEnabled="True"
                                Text="Welcome to RichTextBox!&#x0a;&#x0a;Select this text and press Ctrl+B to make it bold." />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  PasswordBox  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="PasswordBox" />
                    <controls:TextBlock Opacity="0.7" Text="Password boxes hide the entered characters for security." />
                    <controls:StackPanel
                        MaxWidth="400"
                        HorizontalAlignment="Left"
                        Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Standard PasswordBox:" />
                            <controls:PasswordBox Watermark="Enter password..." />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  NumberBox  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="NumberBox" />
                    <controls:TextBlock Opacity="0.7" Text="Number boxes allow numeric input with increment/decrement buttons." />
                    <controls:StackPanel
                        MaxWidth="300"
                        HorizontalAlignment="Left"
                        Spacing="12">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Standard NumberBox:" />
                            <controls:NumberBox Value="42" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  NumberPad  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="NumberPad" />
                    <controls:TextBlock Opacity="0.7" Text="NumberPad provides a touch-friendly numeric keypad." />
                    <controls:NumberPad HorizontalAlignment="Left" />
                </controls:StackPanel>
            </controls:Card>

            <!--  Slider  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Slider" />
                    <controls:TextBlock Opacity="0.7" Text="Sliders allow selection of a value from a range." />
                    <controls:StackPanel
                        MaxWidth="400"
                        HorizontalAlignment="Left"
                        Spacing="16">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Basic Slider:" />
                            <controls:Slider Maximum="100" Value="50" />
                        </controls:StackPanel>
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="Slider with Ticks:" />
                            <controls:Slider
                                Maximum="100"
                                TickFrequency="25"
                                TickPlacement="BottomRight"
                                Value="75" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  SquareSlider  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="SquareSlider" />
                    <controls:TextBlock Opacity="0.7" Text="SquareSlider allows 2D value selection in a square area." />
                    <controls:SquareSlider
                        Width="200"
                        Height="200"
                        HorizontalAlignment="Left" />
                </controls:StackPanel>
            </controls:Card>

            <!--  RatingControl  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="RatingControl" />
                    <controls:TextBlock Opacity="0.7" Text="RatingControl allows users to provide a star rating." />
                    <controls:StackPanel Spacing="8">
                        <controls:RatingControl Value="3" />
                        <controls:RatingControl Value="4.5" />
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!--  ThumbRate  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="ThumbRate" />
                    <controls:TextBlock Opacity="0.7" Text="ThumbRate provides thumbs up/down feedback." />
                    <controls:ThumbRate HorizontalAlignment="Left" />
                </controls:StackPanel>
            </controls:Card>

            <!--  ColorPicker  -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Text="ColorPicker" />
                    <controls:TextBlock Opacity="0.7" Text="Color pickers allow selection of colors using RGB sliders." />
                    <controls:StackPanel Spacing="16">
                        <controls:StackPanel>
                            <controls:TextBlock
                                Margin="0,0,0,4"
                                FontSize="12"
                                Text="ColorPicker (with Alpha):" />
                            <controls:ColorPicker HorizontalAlignment="Left" IsAlphaEnabled="True" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>
        </controls:StackPanel>
    </ScrollViewer>
</UserControl>
