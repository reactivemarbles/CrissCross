<UserControl
    x:Class="CrissCross.Avalonia.UI.Gallery.Views.Pages.HomePageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:CrissCross.Avalonia.UI.Gallery.ViewModels"
    x:DataType="vm:HomePageViewModel">
    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock
                FontSize="32"
                FontWeight="Bold"
                Foreground="White"
                Text="CrissCross Avalonia UI Controls" />

            <TextBlock
                FontSize="20"
                Foreground="#4EC9B0"
                Text="100% Feature Parity Achieved!" />

            <TextBlock
                Margin="0,0,0,24"
                Foreground="#D4D4D4"
                TextWrapping="Wrap">
                This gallery demonstrates all 98 controls from CrissCross.WPF.UI that have been
                successfully migrated to Avalonia UI. Select a control category from the navigation
                menu to explore interactive examples.
            </TextBlock>

            <!--  Feature Highlights  -->
            <Border
                Margin="0,0,0,16"
                Padding="20"
                Background="#252526"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Key Features" />

                    <TextBlock
                        Margin="0,4"
                        Foreground="#D4D4D4"
                        Text="• All 98 CrissCross.WPF.UI controls available" />
                    <TextBlock
                        Margin="0,4"
                        Foreground="#D4D4D4"
                        Text="• Cross-platform: Windows, macOS, Linux" />
                    <TextBlock
                        Margin="0,4"
                        Foreground="#D4D4D4"
                        Text="• Modern Fluent Design styling" />
                    <TextBlock
                        Margin="0,4"
                        Foreground="#D4D4D4"
                        Text="• Full ReactiveUI integration" />
                    <TextBlock
                        Margin="0,4"
                        Foreground="#D4D4D4"
                        Text="• .NET 8, 9, and 10 support" />
                </StackPanel>
            </Border>

            <!--  Control Statistics  -->
            <Grid Margin="0,0,0,16" ColumnDefinitions="*,*,*">
                <Border
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    Padding="16"
                    Background="#252526"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#4EC9B0"
                            Text="98" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#D4D4D4"
                            Text="Total Controls" />
                    </StackPanel>
                </Border>

                <Border
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    Padding="16"
                    Background="#252526"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#4EC9B0"
                            Text="100%" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#D4D4D4"
                            Text="Coverage" />
                    </StackPanel>
                </Border>

                <Border
                    Grid.Column="2"
                    Padding="16"
                    Background="#252526"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#4EC9B0"
                            Text="3" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#D4D4D4"
                            Text="Platforms" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Getting Started  -->
            <Border
                Padding="20"
                Background="#252526"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Getting Started" />

                    <TextBlock Foreground="#D4D4D4" TextWrapping="Wrap">
                        Select a control category from the left navigation panel to explore
                        interactive examples of CrissCross Avalonia UI controls. Each page
                        demonstrates the control's appearance, states, and usage patterns.
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
