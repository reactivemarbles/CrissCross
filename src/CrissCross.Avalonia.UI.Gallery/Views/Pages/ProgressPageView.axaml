<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:CrissCross.Avalonia.UI.Controls"
             xmlns:vm="using:CrissCross.Avalonia.UI.Gallery.ViewModels"
             x:Class="CrissCross.Avalonia.UI.Gallery.Views.Pages.ProgressPageView"
             x:DataType="vm:ProgressPageViewModel">

    <ScrollViewer>
        <controls:StackPanel Margin="24" Spacing="16">
            <controls:TextBlock Text="Progress Controls"
                                FontSize="32"
                                FontWeight="Bold" />

            <controls:TextBlock Text="Progress controls indicate the status of ongoing operations to users."
                                TextWrapping="Wrap"
                                Opacity="0.7" />

            <!-- ProgressBar -->
            <controls:Card Margin="0,16,0,0">
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="ProgressBar" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Progress bars show determinate or indeterminate progress." Opacity="0.7" />
                    <controls:StackPanel Spacing="16" MaxWidth="400" HorizontalAlignment="Left">
                        <controls:StackPanel>
                            <controls:TextBlock Text="Determinate (65%):" FontSize="12" Margin="0,0,0,4" />
                            <controls:ProgressBar Value="65" Maximum="100" Height="8" />
                        </controls:StackPanel>
                        <controls:StackPanel>
                            <controls:TextBlock Text="Indeterminate:" FontSize="12" Margin="0,0,0,4" />
                            <controls:ProgressBar IsIndeterminate="True" Height="8" />
                        </controls:StackPanel>
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- ProgressRing -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="ProgressRing" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Progress rings show circular progress indication." Opacity="0.7" />
                    <controls:StackPanel Spacing="16">
                        <controls:TextBlock Text="Indeterminate ProgressRing (various sizes):" FontSize="12" />
                        <controls:StackPanel Orientation="Horizontal" Spacing="24">
                            <controls:StackPanel Spacing="8" HorizontalAlignment="Center">
                                <controls:ProgressRing IsIndeterminate="True" Width="32" Height="32" />
                                <controls:TextBlock Text="Small" HorizontalAlignment="Center" Opacity="0.7" />
                            </controls:StackPanel>
                            <controls:StackPanel Spacing="8" HorizontalAlignment="Center">
                                <controls:ProgressRing IsIndeterminate="True" Width="48" Height="48" />
                                <controls:TextBlock Text="Medium" HorizontalAlignment="Center" Opacity="0.7" />
                            </controls:StackPanel>
                            <controls:StackPanel Spacing="8" HorizontalAlignment="Center">
                                <controls:ProgressRing IsIndeterminate="True" Width="64" Height="64" />
                                <controls:TextBlock Text="Large" HorizontalAlignment="Center" Opacity="0.7" />
                            </controls:StackPanel>
                        </controls:StackPanel>
                        <controls:TextBlock Text="Determinate ProgressRing (75%):" FontSize="12" Margin="0,8,0,0" />
                        <controls:ProgressRing Progress="75" Width="48" Height="48" HorizontalAlignment="Left" />
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- CircularGauge -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="CircularGauge" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Circular gauges display values on a radial scale." Opacity="0.7" />
                    <controls:StackPanel Orientation="Horizontal" Spacing="24">
                        <controls:CircularGauge Value="35" MinValue="0" MaxValue="100" Width="120" Height="120" />
                        <controls:CircularGauge Value="72" MinValue="0" MaxValue="100" Width="120" Height="120" />
                        <controls:CircularGauge Value="90" MinValue="0" MaxValue="100" Width="120" Height="120" />
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>

            <!-- LoadingScreen -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="LoadingScreen" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Loading screens overlay content to indicate background activity." Opacity="0.7" />
                    <controls:Border Background="#1E1E1E" CornerRadius="4" Height="200" Margin="0,8,0,0">
                        <controls:Grid>
                            <controls:TextBlock Text="Content behind loading screen"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="0.5" />
                        </controls:Grid>
                    </controls:Border>
                </controls:StackPanel>
            </controls:Card>

            <!-- InfoBar -->
            <controls:Card>
                <controls:StackPanel Spacing="12">
                    <controls:TextBlock Text="InfoBar" FontSize="18" FontWeight="Bold" />
                    <controls:TextBlock Text="Info bars display important messages to users." Opacity="0.7" />
                    <controls:StackPanel Spacing="8">
                        <controls:InfoBar Title="Information" Message="This is an informational message." Severity="Informational" IsOpen="True" IsClosable="False" />
                        <controls:InfoBar Title="Success" Message="Operation completed successfully." Severity="Success" IsOpen="True" IsClosable="False" />
                        <controls:InfoBar Title="Warning" Message="Please review before continuing." Severity="Warning" IsOpen="True" IsClosable="False" />
                        <controls:InfoBar Title="Error" Message="An error has occurred." Severity="Error" IsOpen="True" IsClosable="False" />
                    </controls:StackPanel>
                </controls:StackPanel>
            </controls:Card>
        </controls:StackPanel>
    </ScrollViewer>
</UserControl>
