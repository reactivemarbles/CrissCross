<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.ContainerControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Containers" />
            <ui:TextBlock Margin="0,6,0,12" Text="Layout and grouping." />
            <WrapPanel>
                <ui:Card
                    Width="220"
                    Height="140"
                    Margin="6">
                    <StackPanel Margin="8">
                        <ui:TextBlock FontWeight="Bold" Text="Card" />
                        <TextBlock Text="Simple body content." />
                    </StackPanel>
                </ui:Card>
                <ui:CardExpander
                    Width="220"
                    Height="160"
                    Margin="6"
                    Header="Expander">
                    <TextBlock Margin="8" Text="Expandable content." />
                </ui:CardExpander>
                <ui:GroupBox
                    Width="220"
                    Height="160"
                    Margin="6"
                    Header="Group">
                    <StackPanel Margin="4">
                        <TextBlock Text="Item 1" />
                        <TextBlock Text="Item 2" />
                    </StackPanel>
                </ui:GroupBox>
            </WrapPanel>
            <ui:AlarmBanner
                Margin="6"
                IsActive="True"
                Message="This is a warning alarm banner."
                Severity="Warning" />
            <ui:CircularGauge
                Width="200"
                Height="200"
                Margin="6"
                AboveOptimalRangeColor="Red"
                BelowOptimalRangeColor="Yellow"
                DialTextOffset="-39"
                OptimalRangeColor="Green"
                OptimalRangeEndValue="600"
                OptimalRangeStartValue="200"
                RangeIndicatorLightVisible="Visible"
                ValueTextFontSize="30"
                Value="10" />
        </StackPanel>
    </Grid>
</UserControl>
