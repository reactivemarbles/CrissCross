<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.InputControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Input Controls" />
            <ui:TextBlock Margin="0,6,0,12" Text="Common user input primitives." />
            <WrapPanel>
                <ui:Button
                    Width="120"
                    Margin="4"
                    Content="Button" />
                <ui:ToggleButton
                    Width="120"
                    Margin="4"
                    Content="Toggle" />
                <ui:CheckBox
                    Width="120"
                    Margin="8,4"
                    Content="CheckBox" />
                <ui:RadioButton
                    Width="120"
                    Margin="8,4"
                    Content="Radio" />
                <ui:ComboBox Width="160" Margin="4">
                    <ComboBoxItem Content="Item 1" />
                    <ComboBoxItem Content="Item 2" />
                </ui:ComboBox>
                <ui:TextBox
                    Width="160"
                    Margin="4"
                    Text="Sample text" />
                <ui:PasswordBox Width="160" Margin="4" />
                <ui:NumericPushButton Width="160" Margin="4" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
