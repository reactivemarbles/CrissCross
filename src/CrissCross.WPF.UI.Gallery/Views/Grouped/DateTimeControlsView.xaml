<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.DateTimeControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Date and Time" />
            <ui:TextBlock Margin="0,6,0,12" Text="Date &amp; time pickers." />
            <WrapPanel>
                <ui:CalendarDatePicker Width="220" Margin="4" />
                <ui:TimePicker Width="180" Margin="4" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
