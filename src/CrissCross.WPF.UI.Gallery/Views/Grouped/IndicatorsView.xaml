<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.IndicatorsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Indicators" />
            <ui:TextBlock Margin="0,6,0,12" Text="Progress and status." />
            <WrapPanel>
                <ui:ProgressRing
                    Width="80"
                    Height="80"
                    Margin="4"
                    IsActive="True" />
                <ui:InfoBadge Margin="4" Value="9" />
                <ProgressBar
                    Width="220"
                    Height="28"
                    Margin="4"
                    Value="45" />
                <ui:RatingControl
                    Width="200"
                    Height="40"
                    Margin="4"
                    Value="3.5" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
