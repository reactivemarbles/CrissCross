<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.NavigationControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Navigation" />
            <ui:TextBlock Margin="0,6,0,12" Text="Host, tabs and items." />
            <WrapPanel>
                <ui:BreadcrumbBar Width="260" Margin="4" />
                <ui:TabView
                    Width="300"
                    Height="200"
                    Margin="4">
                    <ui:TabViewItem Header="One">
                        <TextBlock Margin="8" Text="Tab One" />
                    </ui:TabViewItem>
                    <ui:TabViewItem Header="Two">
                        <TextBlock Margin="8" Text="Tab Two" />
                    </ui:TabViewItem>
                </ui:TabView>
                <ui:NavigationView
                    Width="420"
                    Height="260"
                    Margin="4"
                    PaneDisplayMode="Left">
                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Content="Home" />
                        <ui:NavigationViewItem Content="Settings" />
                    </ui:NavigationView.MenuItems>
                </ui:NavigationView>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
