<UserControl
    x:Class="CrissCross.WPF.UI.Gallery.Views.ColorControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui">
    <Grid Margin="12">
        <StackPanel>
            <ui:TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Color" />
            <ui:TextBlock Margin="0,6,0,12" Text="Color selection controls." />
            <WrapPanel>
                <ui:ColorPicker
                    Width="320"
                    Height="340"
                    Margin="6" />
                <ui:StandardColorPicker Width="260" Margin="6" />
                <ui:PortableColorPicker Width="260" Margin="6" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
