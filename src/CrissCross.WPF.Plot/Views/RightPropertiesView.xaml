<UserControl
    x:Class="CrissCross.WPF.Plot.RightPropertiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CrissCross.WPF.Plot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui"
    d:DesignHeight="450"
    d:DesignWidth="200"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <ui:Grid Margin="10,0,0,0">
        <ui:Grid.RowDefinitions>
            <RowDefinition Height="400*" />
            <RowDefinition Height="50" />
        </ui:Grid.RowDefinitions>
        <ui:Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="5" />
        </ui:Grid.ColumnDefinitions>
        <ui:Border
            Grid.RowSpan="2"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="10" />
        <ui:Button
            Name="SaveBtn"
            Grid.Row="13"
            Grid.ColumnSpan="2"
            Width="62"
            HorizontalAlignment="Center"
            Content="Save"
            FontFamily="Montserrat"
            FontSize="12"
            FontWeight="Medium"
            Foreground="LightGray" />
        <ScrollViewer
            Grid.Row="0"
            Margin="0,0,0,10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ui:Grid>
                    <ui:Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </ui:Grid.RowDefinitions>
                    <ui:Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="110*" />
                        <ColumnDefinition Width="10" />
                    </ui:Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Name="LineProp"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="19"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Line Properties"
                        TextAlignment="Left"
                        TextWrapping="Wrap" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="DarkGray"
                        Text="Name"
                        TextAlignment="Left"
                        TextWrapping="Wrap" />
                    <ui:TextBox
                        x:Name="textbox1"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="100"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12" />
                    <ui:TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Color"
                        TextAlignment="Left"
                        TextWrapping="Wrap" />
                    <ComboBox
                        Name="colorsComboBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="100"
                        Height="35"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding LineColors.Items}" />
                    <ui:TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Visibility"
                        TextAlignment="Left"
                        TextWrapping="Wrap" />
                    <ComboBox
                        Name="visibilityComboBox"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="100"
                        Height="35"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding Visibilities}" />
                    <ui:TextBlock
                        Grid.Row="4"
                        Grid.ColumnSpan="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Line Width"
                        TextAlignment="Left"
                        TextWrapping="Wrap" />
                    <ui:NumberBox
                        x:Name="LineWidth"
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="100"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        Maximum="6"
                        Minimum="0" />
                    <ui:TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Paused Data"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Visibility="Collapsed" />
                    <!--<ComboBox
                        Name="pausedDataComboBox"
                        Grid.Row="5"
                        Grid.Column="1"
                        Width="100"
                        Height="35"
                        VerticalAlignment="Center"
                        SelectedIndex="{Binding LivePauseDataOption}"
                        Visibility="Collapsed">
                        <ComboBoxItem Content="Live" />
                        <ComboBoxItem Content="Paused" />
                    </ComboBox>-->
                </ui:Grid>
            </StackPanel>
        </ScrollViewer>
    </ui:Grid>
</UserControl>
